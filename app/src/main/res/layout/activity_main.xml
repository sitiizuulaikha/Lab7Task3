<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Accelerometer Axis -->
    <TextView
        android:id="@+id/xAxisAccelerometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer X-axis: "
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/yAxisAccelerometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Y-axis: "
        android:textSize="18sp"
        android:layout_below="@id/xAxisAccelerometerTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/zAxisAccelerometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Z-axis: "
        android:textSize="18sp"
        android:layout_below="@id/yAxisAccelerometerTextView"
        android:layout_marginTop="20dp"/>

    <!-- Gyroscope Axis -->
    <TextView
        android:id="@+id/xAxisGyroscopeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope X-axis: "
        android:textSize="18sp"
        android:layout_below="@id/zAxisAccelerometerTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/yAxisGyroscopeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope Y-axis: "
        android:textSize="18sp"
        android:layout_below="@id/xAxisGyroscopeTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/zAxisGyroscopeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope Z-axis: "
        android:textSize="18sp"
        android:layout_below="@id/yAxisGyroscopeTextView"
        android:layout_marginTop="20dp"/>

    <!-- Magnetometer Axis -->
    <TextView
        android:id="@+id/xAxisMagnetometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetometer X-axis: "
        android:textSize="18sp"
        android:layout_below="@id/zAxisGyroscopeTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/yAxisMagnetometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetometer Y-axis: "
        android:textSize="18sp"
        android:layout_below="@id/xAxisMagnetometerTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/zAxisMagnetometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetometer Z-axis: "
        android:textSize="18sp"
        android:layout_below="@id/yAxisMagnetometerTextView"
        android:layout_marginTop="20dp"/>
</RelativeLayout>

